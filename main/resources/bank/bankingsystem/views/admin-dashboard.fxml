<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="bank.bankingsystem.Controllers.AdminDashboardController">
   <top>
      <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-padding: 10;">
         <Label text="Admin Dashboard" style="-fx-font-size: 20px; -fx-font-weight: bold;" HBox.hgrow="ALWAYS" maxWidth="Infinity"/>
         <Region HBox.hgrow="ALWAYS" />
         <Button fx:id="logoutButton" text="Logout" />
      </HBox>
   </top>
   <center>
      <TabPane fx:id="tabPane" tabClosingPolicy="UNAVAILABLE">
         <tabs>
            <Tab fx:id="customersTab" text="Customer Management">
               <content>
                  <VBox spacing="10.0">
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                     <children>
                        <TableView fx:id="customersTable" VBox.vgrow="ALWAYS">
                           <columns>
                              <TableColumn fx:id="customerIdCol" text="ID" prefWidth="50.0" />
                              <TableColumn fx:id="customerNameCol" text="Name" prefWidth="200.0" />
                              <TableColumn fx:id="customerAddressCol" text="Address" prefWidth="250.0" />
                              <TableColumn fx:id="customerEmployedCol" text="Employed" prefWidth="80.0" />
                           </columns>
                        </TableView>
                        <Separator />
                        <Label text="Create New Customer" style="-fx-font-weight: bold;" />
                        <GridPane hgap="10.0" vgap="10.0">
                           <columnConstraints>
                              <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="120.0" />
                              <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
                           </columnConstraints>
                           <rowConstraints>
                              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                           </rowConstraints>
                           <children>
                              <Label text="Customer Type:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                              <ComboBox fx:id="customerTypeCombo" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                              <Label text="First Name:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                              <TextField fx:id="customerFirstNameField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                              <Label text="Last Name:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                              <TextField fx:id="customerLastNameField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                              <Label text="Address:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                              <TextField fx:id="customerAddressField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                              <Label fx:id="customerIdLabel" text="National ID:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                              <TextField fx:id="customerNationalIdField" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                              <Label text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                              <TextField fx:id="customerUsernameField" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                              <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
                              <PasswordField fx:id="customerPasswordField" GridPane.columnIndex="1" GridPane.rowIndex="6" />
                              <CheckBox fx:id="customerEmployedCheck" mnemonicParsing="false" text="Employed" GridPane.columnIndex="0" GridPane.rowIndex="7" />
                              <Label text="Employer Name:" GridPane.columnIndex="0" GridPane.rowIndex="8" />
                              <TextField fx:id="customerEmployerNameField" GridPane.columnIndex="1" GridPane.rowIndex="8" />
                              <Label text="Employer Address:" GridPane.columnIndex="0" GridPane.rowIndex="9" />
                              <TextField fx:id="customerEmployerAddressField" GridPane.columnIndex="1" GridPane.rowIndex="9" />
                           </children>
                        </GridPane>
                        <HBox spacing="10.0">
                           <Button fx:id="createCustomerButton" mnemonicParsing="false" text="Create Customer" />
                           <Button fx:id="deleteCustomerButton" mnemonicParsing="false" text="Delete Selected" />
                        </HBox>
                     </children>
                  </VBox>
               </content>
            </Tab>
            <Tab fx:id="accountsTab" text="Account Management">
               <content>
                  <VBox spacing="10.0">
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                     <children>
                        <TableView fx:id="accountsTable" VBox.vgrow="ALWAYS">
                           <columns>
                              <TableColumn fx:id="accountNumberCol" text="Account Number" prefWidth="150.0" />
                              <TableColumn fx:id="accountOwnerCol" text="Owner" prefWidth="200.0" />
                              <TableColumn fx:id="accountTypeCol" text="Type" prefWidth="100.0" />
                              <TableColumn fx:id="accountBalanceCol" text="Balance" prefWidth="120.0" />
                           </columns>
                        </TableView>
                        <Separator />
                        <Label text="Create New Account" style="-fx-font-weight: bold;" />
                        <GridPane hgap="10.0" vgap="10.0">
                           <columnConstraints>
                              <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="120.0" />
                              <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
                           </columnConstraints>
                           <rowConstraints>
                              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                           </rowConstraints>
                           <children>
                              <Label text="Customer:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                              <ComboBox fx:id="accountCustomerCombo" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                              <Label text="Account Type:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                              <ComboBox fx:id="accountTypeCombo" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                              <Label text="Account Number:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                              <TextField fx:id="accountNumberField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                              <Label text="Initial Deposit:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                              <TextField fx:id="accountInitialDepositField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                              <Label text="Branch:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                              <TextField fx:id="accountBranchField" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                           </children>
                        </GridPane>
                        <Button fx:id="createAccountButton" mnemonicParsing="false" text="Create Account" />
                     </children>
                  </VBox>
               </content>
            </Tab>
            <Tab fx:id="auditLogTab" text="Audit Log">
               <content>
                  <VBox spacing="10.0">
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                     <children>
                        <TableView fx:id="auditLogTable" VBox.vgrow="ALWAYS">
                           <columns>
                              <TableColumn fx:id="auditIdCol" text="ID" prefWidth="50.0" />
                              <TableColumn fx:id="auditUserIdCol" text="User ID" prefWidth="80.0" />
                              <TableColumn fx:id="auditActionCol" text="Action" prefWidth="400.0" />
                              <TableColumn fx:id="auditTimestampCol" text="Timestamp" prefWidth="200.0" />
                           </columns>
                        </TableView>
                     </children>
                  </VBox>
               </content>
            </Tab>
         </tabs>
      </TabPane>
   </center>
</BorderPane>

