<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="bank.bankingsystem.Controllers.CustomerDashboardFXMLController">
   <top>
      <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-padding: 10;">
         <Label text="Customer Dashboard" style="-fx-font-size: 20px; -fx-font-weight: bold;" HBox.hgrow="ALWAYS" maxWidth="Infinity"/>
         <Region HBox.hgrow="ALWAYS" />
         <Button fx:id="logoutButton" text="Logout" />
      </HBox>
   </top>
   <center>
      <TabPane fx:id="tabPane" tabClosingPolicy="UNAVAILABLE">
         <tabs>
            <Tab fx:id="accountsTab" text="My Accounts">
               <content>
                  <VBox spacing="10.0">
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                     <children>
                        <TableView fx:id="accountsTable" VBox.vgrow="ALWAYS">
                           <columns>
                              <TableColumn fx:id="accountNumberCol" text="Account Number" prefWidth="150.0" />
                              <TableColumn fx:id="accountTypeCol" text="Type" prefWidth="120.0" />
                              <TableColumn fx:id="accountBalanceCol" text="Balance" prefWidth="150.0" />
                           </columns>
                        </TableView>
                        <Separator />
                        <Label text="Open New Account" style="-fx-font-weight: bold;" />
                        <GridPane hgap="10.0" vgap="10.0">
                           <columnConstraints>
                              <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="120.0" />
                              <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
                           </columnConstraints>
                           <rowConstraints>
                              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                           </rowConstraints>
                           <children>
                              <Label text="Account Type:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                              <ComboBox fx:id="newAccountTypeCombo" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                              <Label text="Initial Deposit:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                              <TextField fx:id="newAccountInitialDepositField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                              <Label text="Branch:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                              <TextField fx:id="newAccountBranchField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                           </children>
                        </GridPane>
                        <Button fx:id="openAccountButton" mnemonicParsing="false" text="Open Account" />
                     </children>
                  </VBox>
               </content>
            </Tab>
            <Tab fx:id="transactionsTab" text="Transactions">
               <content>
                  <VBox spacing="10.0">
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                     <children>
                        <HBox spacing="10.0">
                           <Label text="Select Account:" />
                           <ComboBox fx:id="transactionAccountCombo" prefWidth="200.0" />
                           <Button fx:id="refreshTransactionsButton" mnemonicParsing="false" text="Refresh" />
                        </HBox>
                        <TableView fx:id="transactionsTable" VBox.vgrow="ALWAYS">
                           <columns>
                              <TableColumn fx:id="transactionIdCol" text="ID" prefWidth="50.0" />
                              <TableColumn fx:id="transactionTypeCol" text="Type" prefWidth="100.0" />
                              <TableColumn fx:id="transactionAmountCol" text="Amount" prefWidth="120.0" />
                              <TableColumn fx:id="transactionTimestampCol" text="Timestamp" prefWidth="200.0" />
                           </columns>
                        </TableView>
                     </children>
                  </VBox>
               </content>
            </Tab>
            <Tab fx:id="operationsTab" text="Deposit/Withdraw">
               <content>
                  <VBox spacing="20.0">
                     <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </padding>
                     <children>
                        <HBox spacing="10.0">
                           <Label text="Select Account:" />
                           <ComboBox fx:id="operationAccountCombo" prefWidth="200.0" />
                        </HBox>
                        <Label fx:id="accountBalanceLabel" text="Current Balance: --" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
                        <Separator />
                        <VBox spacing="15.0">
                           <Label text="Deposit" style="-fx-font-weight: bold;" />
                           <HBox spacing="10.0">
                              <Label text="Amount:" />
                              <TextField fx:id="depositAmountField" promptText="Enter amount" />
                              <Button fx:id="depositButton" mnemonicParsing="false" text="Deposit" />
                           </HBox>
                        </VBox>
                        <Separator />
                        <VBox spacing="15.0">
                           <Label text="Withdraw" style="-fx-font-weight: bold;" />
                           <HBox spacing="10.0">
                              <Label text="Amount:" />
                              <TextField fx:id="withdrawAmountField" promptText="Enter amount" />
                              <Button fx:id="withdrawButton" mnemonicParsing="false" text="Withdraw" />
                           </HBox>
                        </VBox>
                        <Separator />
                        <VBox spacing="15.0">
                           <Label text="Interest" style="-fx-font-weight: bold;" />
                           <Button fx:id="applyInterestButton" mnemonicParsing="false" text="Apply Monthly Interest" />
                        </VBox>
                     </children>
                  </VBox>
               </content>
            </Tab>
         </tabs>
      </TabPane>
   </center>
</BorderPane>

